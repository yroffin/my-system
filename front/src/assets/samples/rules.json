[
    {
        "name": "Each target edge onto a pod must have a defined label",
        "priority": 0,
        "conditions": {
            "any": [
                {
                    "all": [
                        {
                            "fact": "element",
                            "path": "$.type",
                            "operator": "equal",
                            "value": "edges"
                        },
                        {
                            "fact": "element",
                            "path": "$.data.target.tag",
                            "operator": "equal",
                            "value": "azure/aks/deployment/pod"
                        },
                        {
                            "fact": "element",
                            "path": "$.data.label",
                            "operator": "equal",
                            "value": "consume"
                        }
                    ]
                },
                {
                    "all": [
                        {
                            "fact": "element",
                            "path": "$.type",
                            "operator": "equal",
                            "value": "edges"
                        },
                        {
                            "fact": "element",
                            "path": "$.data.target.tag",
                            "operator": "notEqual",
                            "value": "azure/aks/deployment/pod"
                        }
                    ]
                },
                {
                    "all": [
                        {
                            "fact": "element",
                            "path": "$.type",
                            "operator": "equal",
                            "value": "node"
                        }
                    ]
                }
            ]
        },
        "event": {
            "type": "check",
            "params": {
                "message": "target edge onto a pod must have a defined label"
            }
        }
    },
    {
        "name": "A tag on node is not mandatory",
        "priority": 1,
        "conditions": {
            "any": [
                {
                    "all": [
                        {
                            "fact": "element",
                            "operator": "equal",
                            "value": "node",
                            "path": "$.type"
                        },
                        {
                            "fact": "element",
                            "operator": "notEqual",
                            "value": "",
                            "path": "$.data.tag"
                        }
                    ]
                },
                {
                    "all": [
                        {
                            "fact": "element",
                            "operator": "equal",
                            "value": "edges",
                            "path": "$.type"
                        }
                    ]
                }
            ]
        },
        "event": {
            "type": "check",
            "params": {
                "message": "each node must have a tag"
            }
        }
    }
]