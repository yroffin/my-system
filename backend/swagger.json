{
    "info": {
        "description": "Documentation for the Car Brand API",
        "title": "Car Brand API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:9000/",
            "description": "Local environment"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "Car brands"
                ],
                "summary": "Get car brands",
                "description": "Get all the car defined brands",
                "responses": {
                    "200": {
                        "description": "List of car brands",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/CarBrand"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Car brands"
                ],
                "summary": "Create a car brand",
                "description": "Create a new car brand",
                "requestBody": {
                    "description": "New car brand data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CarBrandCreate"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success payload containing newly created car brand information",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CarBrandCreateSuccess"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request; Check `errors` for any validation errors",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/BadRequest"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "openapi": "3.0.2",
    "components": {
        "schemas": {
            "CarBrand": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 16,
                        "description": "Name of the car brand",
                        "example": "Mercedes-Benz"
                    },
                    "established": {
                        "type": "integer",
                        "minimum": 1886,
                        "maximum": 2100,
                        "description": "Year when the car brand was established",
                        "example": 1926
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "description": "The time at which the car brand was created in the database"
                    }
                },
                "required": [
                    "established",
                    "name"
                ]
            },
            "CarBrandCreate": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 16,
                        "description": "Name of the car brand",
                        "example": "Mercedes-Benz"
                    },
                    "established": {
                        "type": "integer",
                        "minimum": 1886,
                        "maximum": 2100,
                        "description": "Year when the car brand was established",
                        "example": 1926
                    }
                },
                "required": [
                    "established",
                    "name"
                ]
            },
            "CarBrandCreateSuccess": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "description": "This is always \"True\" when a request succeeds",
                        "example": true
                    },
                    "car_brand": {
                        "description": "Validated and newly created car brand information",
                        "allOf": [
                            {
                                "$ref": "#/components/schemas/CarBrand"
                            }
                        ]
                    }
                },
                "required": [
                    "car_brand",
                    "success"
                ]
            },
            "BadRequest": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "description": "This is always \"False\" when a request fails",
                        "example": false
                    },
                    "errors": {
                        "type": "object",
                        "description": "Attached request body validation errors",
                        "example": {
                            "name": [
                                "Missing data for required field."
                            ]
                        },
                        "additionalProperties": {}
                    }
                },
                "required": [
                    "success"
                ]
            }
        }
    }
}